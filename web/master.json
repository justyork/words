{
  "$jason": {
    "head": {
      "title": "LWords",
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "http://home.web-y.ru",
            "data_type": "html"
          },
          "success": {
            "type": "$render",
            "options": {
              "type": "html"
            }
          }
        }
      },
      "templates": {
        "body": {
          "style": {
            "border": "none"
          },
          "header": {
            "style": {
              "background": "#0070c9",
              "shy": "true",
              "color": "#ffffff"
            },
            "title": "LWords"
          },
          "sections": [
            {
              "items": {
                "{{#each $jason.find('.item')}}": {
                  "type": "vertical",
                  "href": {
                    "url": "https://raw.githubusercontent.com/gliechtenstein/iosdevweekly.json/master/detail.json",
                    "options": {
                      "issue": "http://iosdevweekly.com{{$(this).find('a').attr('href')}}"
                    }
                  },
                  "style": {
                    "padding": "20",
                    "color": "#cecece",
                    "spacing": "10"
                  },
                  "components": [
                    {
                      "type": "horizontal",
                      "components": [
                        {
                          "type": "label",
                          "style": {
                            "font": "HelveticaNeue-Bold",
                            "size": "14"
                          },
                          "text": "{{$(this).find('.item__heading').text()}}"
                        },
                        {
                          "type": "space",
                          "style": {
                            "width": "20"
                          }
                        },
                        {
                          "type": "label",
                          "style": {
                            "font": "HelveticaNeue-Italic",
                            "size": "14",
                            "color": "#cecece"
                          },
                          "text": "{{$(this).find('.item__footer').text()}}"
                        }
                      ]
                    },
                    {
                      "type": "label",
                      "text": "{{$(this).find('.item__title').text()}}",
                      "style": {
                        "font": "Georgia",
                        "size": "22"
                      }
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    }
  }
}